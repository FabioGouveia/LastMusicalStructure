<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LargeRootView.Vertical"
    android:gravity="center">

    <android.support.design.widget.TabLayout
        android:id="@+id/folder_tab"
        style="@style/FolderTab" />

    <android.support.v4.view.ViewPager
        android:id="@+id/folder_view_pager"
        style="@style/LargeRootView"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/folder_loading_artist_progress_bar"
        android:layout_width="@dimen/artist_search_progress_bar_size"
        android:layout_height="@dimen/artist_search_progress_bar_size" />

    <TextView
        android:id="@+id/folder_empty_view"
        style="@style/FolderEmptyView" />

</LinearLayout>